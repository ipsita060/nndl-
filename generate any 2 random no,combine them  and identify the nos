import tensorflow as tf
import numpy as np
import matplotlib.pyplot as plt
import random   # <-- USING THIS

# Load MNIST dataset
(x_train, y_train), (x_test, y_test) = tf.keras.datasets.mnist.load_data()

# Combine train + test for more variety
all_images = np.concatenate([x_train, x_test])
all_labels = np.concatenate([y_train, y_test])

# 1. Randomly pick first digit using random.randint
idx1 = random.randint(0, len(all_images) - 1)
digit1_img = all_images[idx1]
digit1_label = all_labels[idx1]

# 2. Randomly pick second digit using random.randint
idx2 = random.randint(0, len(all_images) - 1)
digit2_img = all_images[idx2]
digit2_label = all_labels[idx2]

# 3. Create a blank canvas (28 height Ã— 56 width)
two_digit_img = np.zeros((28, 56), dtype=np.uint8)

# 4. Place the digits side-by-side
two_digit_img[:, 0:28] = digit1_img        # left digit
two_digit_img[:, 28:56] = digit2_img       # right digit

# 5. Display result
print("Random digits selected:", digit1_label, digit2_label)
print("Generated 2-digit number:", digit1_label * 10 + digit2_label)

plt.imshow(two_digit_img, cmap="gray")
plt.title(f"Generated: {digit1_label}{digit2_label}")
plt.axis("off")
plt.show()
